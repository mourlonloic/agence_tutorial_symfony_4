{% extends "base.html.twig" %}

{% block title "Se connecter" %}

{% block body %}

{% if errors %}
    <div class="alert alert-danger">
        {{ errors.messageKey | trans(errors.messagedata, 'security') }}
    </div>
{% endif %}

<div class="container mt-4">
    <form action="{{ path('login') }}" method="post">
        <div class="form-group">
            <label for="username"> Username</label>
            <input type="text" id="username" name="_username" class="form_control" value="{{ last_username }}">
        </div>
        
        <div class="form-group">
            <label for="password"> Password</label>
            <input type="password" id="password" name="_password" class="form_control">
        </div>
        
        <button type="submit" class="btn btn-primary">Connect</button>
    </form>
</div>
    
{% endblock %}
    
